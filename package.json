{
  "name": "vscode-release-explorer",
  "displayName": "Release Explorer",
  "description": "Quickly navigate release versions for your dependencies with RSS updates",
  "version": "0.0.1",
  "publisher": "erikherbranson",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:releaseExplorer.views.dependencies"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "releaseExplorer.commands.syncSpin",
        "title": "refresh",
        "icon": "$(sync~spin)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "releaseExplorer",
          "title": "Release Explorer",
          "icon": "$(versions)"
        }
      ]
    },
    "views": {
      "releaseExplorer": [
        {
          "id": "releaseExplorer.views.dependencies",
          "name": "Releases"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "releaseExplorer.commands.syncSpin",
          "when": "view == releaseExplorer.views.dependencies && releaseExplorer.status.isSyncing == true",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "commit": "cz",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/node-cron": "^3.0.1",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "node-cron": "^3.0.0",
    "rss-parser": "^3.12.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
